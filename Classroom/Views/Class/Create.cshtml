@{
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card shadow-lg border-0 rounded-lg mt-5">
                <div class="card-header"><h3 class="text-center font-weight-light my-4">Create Class</h3></div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Class", FormMethod.Post, new { @class = "form" }))
                    {
                        <form>
                            <div class="form-floating mb-3">
                            @Html.TextBox("Subject", null, new { @class = "form-control", id = "inputSubject", placeholder = "Subject" })
                                <label for="inputSubject">Subject</label>
                            </div>
                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <div class="form-floating mb-3 mb-md-0">
                                    @Html.TextBox("Room", null, new { @class = "form-control", id = "inputRoom", placeholder = "Room" })
                                        <label for="inputRoom">Room</label>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                    @Html.TextBox("Schedule", null, new { @class = "form-control", id = "inputSchedule", placeholder = "Schedule" })
                                        <label for="inputSchedule">Schedule</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-floating mb-3">
                            @Html.TextBox("Teacher", null, new { @class = "form-control", id = "inputTeacher", placeholder = "Teacher" })
                                <label for="inputTeacher">Teacher</label>
                            </div>
                            <div class="mt-4 mb-0">
                                <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Create Class</button>
                                </div>
                            </div>
                        </form>
                        <!-- Form for creating a class -->
                    }
                    
                </div>
                <div class="card-footer text-center py-3">
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>